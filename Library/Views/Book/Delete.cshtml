@model Library.Domain.DTOs.Books.BookDTO

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-left">
        <div class="col-md-6">
            <div class="card border-secondary">
                <div class="card-header bg-danger text-white">
                    <h2 class="h3 ">Delete Book</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-black">Are you sure you want to delete this?</h3>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Title)</p>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Author" class="form-label fw-bold">Author</label>
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Author)</p>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Shelf" asp-action="Details" asp-route-Id="@Model.ShelfId" class="btn btn-secondary ms-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
