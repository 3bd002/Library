@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model Library.Domain.DTOs.Shelves.ShelfDTO

@{
    ViewData["Title"] = Localizer["Create a Shelf"];
}

<div class="container mt-5">
    <div class="row justify-content-left">
        <div class="col-md-6">
            <h2 class="text-left">@Localizer["Create a Shelf"]</h2>
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">@Localizer["Shelf Name"]</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="text-left">
                            <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
                            <a asp-action="Index" asp-controller="Shelf" class="btn btn-secondary ms-2">@Localizer["Back to List"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
