@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<Library.Domain.DTOs.Shelves.ShelfDTO>

@{
    ViewData["Title"] = Localizer["Index"];
}

<div class="container">
    <h1 class="mt-4">@Localizer["Shelves"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">@Localizer["Create New"]</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Localizer["ID"]</th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Created At"]</th>
                <th>@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @counter
                        @{
                            counter++;
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">@Localizer["Edit"]</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
