@model Library.Domain.DTOs.Shelves.ShelfDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="mt-4">Edit Shelf</h1>
    <div class="row">
        <div class="col-md-6 border border-gray p-4 rounded">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Shelf" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
