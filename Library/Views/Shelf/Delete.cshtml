@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model Library.Domain.DTOs.Shelves.ShelfDTO

@{
    ViewData["Title"] = Localizer["Delete"];
}

<div class="container mt-5">
    <div class="row justify-content-left">
        <div class="col-md-6">
            <div class="card border-secondary">
                <div class="card-header bg-danger text-white">
                    <h2 class="h3">@Localizer["Delete Shelf"]</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-black">@Localizer["Are you sure you want to delete this?"]</h3>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["Name"]</label>
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</p>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CreatedAt" class="form-label fw-bold">@Localizer["Created At"]</label>
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.CreatedAt)</p>
                        </div>
                        <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                        <a asp-action="Index" asp-controller="Shelf" class="btn btn-secondary ms-2">@Localizer["Back to List"]</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
